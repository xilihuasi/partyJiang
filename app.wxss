/**app.wxss**/
text{
	font-family:'Microsoft Yahei';
}
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 200rpx 0;
	box-sizing: border-box;
} 
.card {
	padding: 20rpx;
	border-radius: 2px;
	/*width: calc(100% - 20px);*/
	font-size: 30rpx;
	width: 70%;
	background: #fff;
	box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);
}
@keyframes beat{
	0%{
		transform: scale(0.8,0.8);
		opacity: 1;
	}
	25%{
		transform: scale(1,1);
		opacity: 0.8;
	}
	100%{
		transform: scale(0.8,0.8);
		opacity: 1;
	}
}
@keyframes fadeInDown{
	0%{
		transform:translateY(-160rpx);
		opacity: .2;
	}
	80%{
		transform:translateY(-5rpx);
		opacity: .9;
	}
	100%{
		transform:translateY(0);
		opacity: 1;
	}
}
@keyframes fadeIn{
	0%{
		opacity: .2;
	}
	80%{
		opacity: .9;
	}
	100%{
		transform:translateY(0);
		opacity: 1;
	}
}